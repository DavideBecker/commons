alias stopserver='sudo systemctl stop nginx'
alias startserver='sudo systemctl start nginx'
alias restartserver='sudo systemctl restart nginx'
alias reloadserver='sudo systemctl reload nginx'
alias disableserver='sudo systemctl disable nginx'
alias enableserver='sudo systemctl enable nginx'
alias serverstatus='systemctl status nginx'

alias stopdb='sudo systemctl stop mongodb'
alias startdb='sudo systemctl start mongodb'
alias restartdb='sudo systemctl restart mongodb'
alias reloaddb='sudo systemctl reload mongodb'
alias disabledb='sudo systemctl disable mongodb'
alias enabledb='sudo systemctl enable mongodb'
alias dbstatus='systemctl status mongodb'
